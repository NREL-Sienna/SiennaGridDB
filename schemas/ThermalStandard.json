{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "properties": {
    "active_power": {
      "default": 0.0,
      "type": "number"
    },
    "active_power_limits": {
      "$ref": "common.json#/definitions/MinMax"
    },
    "available": {
      "default": true,
      "type": "boolean"
    },
    "base_power": {
      "default": 0.0,
      "type": "number"
    },
    "bus_id": {
      "title": "Bus Id",
      "type": "integer"
    },
    "fuel_type": {
      "$ref": "common.json#/definitions/ThermalFuels",
      "default": "OTHER"
    },
    "id": {
      "type": "integer"
    },
    "must_run": {
      "default": false,
      "title": "Must Run",
      "type": "boolean"
    },
    "name": {
      "type": "string"
    },
    "operation_cost": {
      "$ref": "common.json#/definitions/ThermalGenerationCost"
    },
    "prime_mover": {
      "$ref": "common.json#/definitions/PrimeMovers",
      "default": "OT"
    },
    "ramp_limits": {
      "$ref": "common.json#/definitions/UpDown"
    },
    "rating": {
      "default": 0.0,
      "type": "number"
    },
    "reactive_power": {
      "default": 0.0,
      "type": "number"
    },
    "reactive_power_limits": {
      "$ref": "common.json#/definitions/MinMax"
    },
    "status": {
      "default": true,
      "type": "boolean"
    },
    "time_limits": {
      "$ref": "common.json#/definitions/UpDown"
    }
  },
  "required": ["id", "name", "operation_cost", "bus_id"],
  "title": "ThermalStandard",
  "type": "object"
}
